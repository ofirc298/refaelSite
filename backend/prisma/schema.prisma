generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id
  title       String
  description String   @default("")
  price       Float
  category    String
  image       String   @default("")
  inStock     Boolean  @default(true)
  stockQty    Int      @default(0)
  createdAt   DateTime @default(now())

  @@index([category])
  @@index([price])
  @@index([title])
}
